<?xml version="1.0" encoding="UTF-8"?>
<userInput>
    <panel order="0">
        <field type="title">Graphical User Interface</field>
        
        <field type="radio" variable="gui.radio">
            <description align="left" txt="Which user interface do you want to use?"
                id="description.radio"/>
            <spec>
                <choice txt="The HTML5 Widgets based user interface" id="radio.label.2" value="html5widget" set="true" />
                <choice txt="The classic user interface" id="radio.label.1" value="default" />
            </spec>
        </field>
        <field type="space" />
        <field type="staticText" align="left"
            txt="The default user interface can be changed again by a system adminstrator. See the documentation for details."
            id="staticText.text"/>
    </panel>
</userInput>